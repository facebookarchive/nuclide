/**
 * https://github.com/websockets/ws/blob/master/doc/ws.md
 */

declare module 'ws' {
  declare class ws$Server extends events$EventEmitter {
    // TODO properly type the options object
    constructor(options: Object): void,
    close(): void,
  }

  declare class ws$WebSocket extends events$EventEmitter {
    constructor(
      address: string | Array<string>,
      options?: ?Object,
    ): ws$WebSocket,
    constructor(
      address: string,
      protocols: string | Array<string>,
      options: Object,
    ): ws$WebSocket,
    static Server: typeof ws$Server,

    onopen?: () => mixed,
    onclose?: () => mixed,
    onerror?: () => mixed,

    send(message: string | Buffer, ack?: (error: ?Object) => void): void,
    send(
      message: string | Buffer,
      options: Object,
      ack: (error: ?Object) => void,
    ): void,
    close(): void,
    close(statusCode: number, message: string): void,
    terminate(): void,
    ping(data: ?string, mask?: boolean, failSilently?: boolean): void,
    url: string,
  }

  declare module.exports: typeof ws$WebSocket;
}
